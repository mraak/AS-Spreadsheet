<?xml version = "1.0" encoding = "utf-8"?>
<context:BasePopup xmlns:fx = "http://ns.adobe.com/mxml/2009"
				   xmlns:s = "library://ns.adobe.com/flex/spark"
				   xmlns:mx = "library://ns.adobe.com/flex/halo"
				   xmlns:context = "com.flextras.context.*"
				   title = "Set column width">
	<s:HSlider id = "slider"
			   minimum = "0"
			   maximum = "300"
			   stepSize = "1"
			   value = "{grid.getColumnWidthAt(grid.selectedCellProperties.column)}"
			   change = "slider_changeHandler(event)" />

	<fx:Script>
		<![CDATA[
			import com.flextras.paintgrid.CellProperties;
			
			override protected function selectedCellsChangedHandler (e : Event) : void
			{
				//slider.value = grid.getColumnWidthAt(grid.selectedCellProperties.column);
			}
			
			protected function slider_changeHandler (event : Event) : void
			{
				for each (var cell : CellProperties in grid.selectedCells)
					grid.setColumnWidthAt(cell.column, slider.value);
			}
		]]>
	</fx:Script>
</context:BasePopup>
