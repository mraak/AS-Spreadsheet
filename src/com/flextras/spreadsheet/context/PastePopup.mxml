<?xml version = "1.0" encoding = "utf-8"?>
<!---
This is a default popup for pasting data into the Spreadsheet.
@see com.flextras.spreadsheet.Spreadsheet
-->
<context:BasePopup xmlns:fx = "http://ns.adobe.com/mxml/2009"
				   xmlns:s = "library://ns.adobe.com/flex/spark"
				   xmlns:mx = "library://ns.adobe.com/flex/mx"
				   xmlns:context = "com.flextras.spreadsheet.context.*"
				   title = "Paste">
	
	<!---
	This is the list of options for pasting items into the Spreadsheet.
	-->
	<s:ButtonBar id = "buttonBar"
				 change = "buttonBar_changeHandler(event)">
		<s:dataProvider>
			<s:ArrayCollection>
				<fx:String>Values</fx:String>

				<fx:String>Styles</fx:String>

				<fx:String>Expressions</fx:String>

				<fx:String>Cancel</fx:String>
			</s:ArrayCollection>
		</s:dataProvider>
	</s:ButtonBar>

	<fx:Script>
		<![CDATA[
			import spark.events.IndexChangeEvent;
			
			/**
			 * 
			 */
			public var pasteFunction : Function;
			
			/**
			 * This is the default handler for items selected from the buttonBar.
			 */
			protected function buttonBar_changeHandler (event : IndexChangeEvent) : void
			{
				switch (event.newIndex)
				{
					case 0:
						pasteFunction("moveRangeValues");
						break;
					
					case 1:
						pasteFunction("moveRangeStyles");
						break;
					
					case 2:
						pasteFunction("moveRangeExpressions");
						break;
				}
				
				closeHandler(null);
			}
		]]>
	</fx:Script>
</context:BasePopup>
